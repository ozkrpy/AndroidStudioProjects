<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recargas_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ozkrp.fuelwatcher.RecargaActivity">

    <TextView
        android:id="@+id/textoTitulo"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_between"
        android:text="@string/titulo_recargas" />

    <EditText
        android:id="@+id/editText_fecha_recarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Spinner_combustibles"
        android:hint="@string/hint_fecha"
        android:inputType="date" />

    <EditText
        android:id="@+id/editText_odometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/Spinner_combustibles"
        android:hint="@string/hint_odometro"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText_monto_recarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_fecha_recarga"
        android:hint="@string/hint_monto"
        android:inputType="number" />

    <TextView
        android:id="@+id/textoLitros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText_monto_recarga"
        android:layout_below="@+id/editText_odometro"
        android:layout_marginLeft="5dp"
        android:layout_toStartOf="@+id/textoLitrosNumero"
        android:gravity="center_vertical"
        android:text="@string/litros"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textoLitrosNumero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textoLitros"
        android:layout_alignEnd="@+id/editText_odometro"
        android:layout_below="@+id/editText_odometro"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/Spinner_vehiculos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textoTitulo"/>

    <Spinner
        android:id="@+id/Spinner_combustibles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Spinner_vehiculos"
        />

    <Button
        android:id="@+id/botonConfirmarCarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_monto_recarga"
        android:layout_marginTop="@dimen/margin_between"
        android:text="@string/boton_confirmar" />

</RelativeLayout>
